package models;

public abstract class AbstractPlayer {
	
	// Atributos
	
	/**
	 * 
	 */
	private Mano mano;
	/**
	 * 
	 */
	private Mesa mesa;
	/**
	 * 
	 */
	private String nombre;
	/**
	 * 
	 */
	private int puntos;
	
	// Constructor
	public AbstractPlayer(Mesa mesa, String nombre) {
		super();
		this.mano = new Mano();
		this.mesa = mesa;
		this.nombre = nombre;
		this.puntos = 0;
	}



	// Métodos
	/**
	 * 
	 */
	public abstract void jugarTurno();
}
