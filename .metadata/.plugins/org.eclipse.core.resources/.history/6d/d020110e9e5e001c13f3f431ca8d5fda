package models;

import java.util.Scanner;

public class pruebas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner s = new Scanner(System.in);

		Baraja baraja = new Baraja(1, true);

		int choice = Integer.parseInt(s.nextLine());
		double puntuacion = 0;

		System.out.println("Juego de las 7 y media:/n¿Empezar partida? S/N");

		do {
			System.out.println("¿Qué deseas hacer?\n1.Coger carta\n2.Plantarse");
			if (choice == 1) {
				Carta aux = new Carta(baraja.robar().getId());
				System.out.println("Has sacado el " + aux.getNombreCarta());
				puntuacion += aux.getValor7yMedia();

			} else {
				System.out.println("Por favor, introduce el número 1 o 2 para continuar con el juego o plantarte.");
			}

		} while (choice != 2);

	
	}

}
